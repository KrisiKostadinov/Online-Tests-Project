<div class="container mt-5 p-5 dcs">
    <h2>{{ test.title }}</h2>
    <ul>
        {{#each test.answers }}
        <li>
            {{ content }}
        </li>
        {{/each }}
    </ul>
    <a href="#">{{ test.categoryId.name }}</a>
    {{#if user.isAdministrator }}
    <a href="/tests/questions/create/{{test._id}}" class="btn btn-primary">Добави въпрос</a>
    <button id="{{ test._id }}" href="/tests/remove/{{test._id}}" onclick="deleteTest(event)" class="btn btn-danger">Изтрии теста</button>
    {{/if }}
</div>

<script>
    function deleteTest(event) {
        const id = event.target.id;
        console.log(id);
        $.ajax({
            url: '/tests/remove/' + id,
            method: 'delete',
            success: () => {
                window.location.href = '/tests/all';
            }
        });
    }
</script>